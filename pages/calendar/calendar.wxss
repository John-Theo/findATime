.tab-h{
    height: 3.5rem;
    width: 100%; 
    overflow: hidden;
    line-height: 100rpx;
    background: #F7F7F7; 
    font-size: 12px; 
    position: fixed;
    bottom: 0;
    padding: 0rpx 70rpx; 
    z-index: 99;
    background-color:#64c80a;
}
.tab-item{
  margin:0.5rem 36rpx;
  display: inline-flex;
  align-items:center;
  justify-content:center;
  width: 30%;
  color: white;
}
.card{
  background-color: #ffffff;
  border-radius: 7px;
  box-shadow: 0 0 10px 2px rgba(150, 150, 150, 0.1);
  margin: 0 1rem;
  overflow: hidden;
}
.back{
  margin-top: -1rem;
  background-color: #64c80a;
  padding: 1.5rem 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.car{
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.c1{
  height: 2rem;
  width: 2rem;
  display: flex;
  align-items: center;
  justify-content: center;
}
.c2{
  height: 1rem;
  width: 1rem;
  border-radius: 50%;
}
.c3{
  height: 1.5rem;
  width: 1.5rem;
  border-radius: 50%;
}
.selected{
  background-color:#64c80a;
}
.unselet{
  background-color:#eee;
}
.b1{
  border: 0.1rem black solid;
}
.b2{
  border: 0.5rem black solid;
}
.con{
  width: 80%;
  margin: 8% 10% 0 10%;
  
}
.date{
  font-size: 15px;
  font-weight: 550;
  width: 1rem;
  text-align: right;
}
.week{
  font-size: 10px;
  font-weight: 900;
  color: #999;
  width: 1rem;
  margin-right: 0.5rem;
}
.friday{
  margin-bottom: 1.5rem;
}
.long{
  font-size: 13px;
  font-weight: 550;
}
.short{
   font-size: 10px;
  font-weight: 900;
  color: #999;
}
.code{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding:  1.5rem 10% 1rem 10%;
}
.code-input{
  border: 1.5px #64c80a solid;
  font-size: 12px;
  border-radius: 5px;
  width: 6rem;
  height: 1.5rem
}
.p-code{
  font-size: 12px;
  color: #ccc;
  padding-left: 0.2rem;
}
.post{
  font-size: 12px;
  background-color: #64c80a;
  color: white;
  width: 5rem;
  height: 1.7rem;
  text-align: center;
}
.invite{
  background-color: #eee;
  height: 3rem;
  font-size: 13px;
  font-weight: 800;
  color: #64c80a;
  border-radius: 0;
  padding-top: 0.5rem;
  width:100%;
}