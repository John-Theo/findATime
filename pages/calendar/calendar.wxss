.card{
  background-color: #ffffff;
  border-radius: 7px;
  box-shadow: 0 0 10px 2px rgba(0,0,0,0.1);
  width: 90%;
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  overflow: hidden;
  /* visibility: hidden; */
}
.con{
  margin-top: 50rpx;
  width: 80%;
  height: 60%;
}  

page{
  height: 100%;
  /* background-color: #fff; */
   background-color: #64c80a; 
   overflow: hidden;
}
.page{  
  display: flex;
  flex-direction: column;
  align-items: center; 
  justify-content: space-around;
  overflow: hidden;
}
.line{
  display: flex;
  height: 80rpx;
  align-items: center;
  justify-content: space-around;
}
.row_head{
  width: 16%;
  display: inline-flex;
  justify-content:flex-end; 
}
.date{
  font-size: 36rpx;
  text-align: right;
}
.week{
  font-size: 20rpx;
  font-weight: lighter;
  color: #999;
  line-height: 60rpx;
  margin-left: 10rpx;
  margin-right: 20rpx;
}
.c1{
  height: 2rem;
  /* background-color: #64c80a; */
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.c2{
  height: 40rpx;
  width: 40rpx;
  border-radius: 50%;
  font-size: 22rpx;
  line-height: 40rpx;
  text-align: center;
  color: #666;
}
.c3{
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
  font-size: 30rpx;
  line-height: 60rpx;
  text-align: center;
  color: #666;
}
.title{padding-left: 50rpx; margin-bottom: 20rpx;}
.long{font-size: 32rpx;}
.short{font-size: 24rpx; color: #999;}
.selected{background-color:#64c80a;}
.unselet{background-color:#eee;}

.b1{border: 0.1rem black solid;}
.b2{ border: 0.5rem black solid;}

.p-code{
  font-size: 12px;
  color: #ccc;
  padding-left: 0.2rem;
}
.btn_sec{
  margin: 50rpx 0rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.post{
  font-size: 30rpx;
  background-color: #64c80a;
  color: white;
  text-align: center;
}
.invite{
  font-size: 30rpx;
  text-align: center;
}
.nav_pic{
  height: 100rpx;
  width: 100rpx;
  margin-bottom: 0rpx;  
  /* box-shadow: 0 0 10px 2px rgba(0,0,0,0.1);  */
}
.tab-h{
  /* background-color: #ddd; */
  width: 80%; 
  height: 20%;
  position: fixed;
  bottom: 0rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}