.tab-h{
    height: 3.5rem;
    width: 100%; 
    overflow: hidden;
    line-height: 100rpx;
    background: #F7F7F7; 
    font-size: 12px; 
    position: fixed;
    bottom: 0;
    padding: 0rpx 70rpx; 
    z-index: 99;
    background-color:#64c80a;
}
.tab-item{
  margin:0.5rem 36rpx;
  display: inline-flex;
  align-items:center;
  justify-content:center;
  width: 30%;
  color: white;
}
.card{
  background-color: #ffffff;
  border-radius: 7px;
  box-shadow: 0 0 10px 2px rgba(150, 150, 150, 0.1);
  margin: 0 1rem;
  overflow: hidden;
}
.back{
  margin-top: -1rem;
  background-color: #64c80a;
  padding: 1.5rem 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.invite{
  background-color: #eee;
  height: 3rem;
  font-size: 13px;
  font-weight: 800;
  color: #64c80a;
  border-radius: 0;
  padding-top: 0.5rem;
  margin-top: 4rem; 
}
.title{
  font-size: 18px;
  font-weight: 800;
  color: #555;
  text-align: center;
  margin: 2.5rem 0 0 0;
}
.best{
  margin-top: 3rem;
  margin-left: 1.5rem;
  font-size: 13px;
  font-weight: 700;
  color: #64c80a;
}
.sec{
  margin-top: 3.5rem;
  margin-left: 1.5rem;
  font-size: 13px;
  font-weight: 700;
  color: #aaa;
}
.time{
  margin-left: 2.5rem;
  width: 12rem;
}
.number{
  font-size: 30px;
  color: #aaa;
  margin-right: 0.2rem;
}
.scale{
  font-size: 10px;
  color: #aaa;
}
.week{
  font-size: 10px;
  color: #64c80a;
  width: 3rem;
  font-weight: 400;
}
.res-row{
  display: flex;
}
.res-right{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 10rem;
  margin-bottom: 0.5rem;
}
.notice{
  margin-right: 1.5rem;
  font-size: 9px;
  color: #64c80a;
  background-color: white;
  border: 1px solid #64c80a;
  border-radius: 5px;
  height: 1.4rem;
  width: 3rem;
  line-height: 1.4rem;
  text-align: center;
}
progress{
  font-size: 10px;
  color: #64c80a;
  width: 6rem;
}
.per{
  display: flex;
  flex-direction: row;
  align-items: baseline;
  justify-content: space-around;
}
.selected{
  font-size: 13px;
  color: #64c80a;
}
.all-p{
  font-size: 10px;
  color: #64c80a;
}
.page-col{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 1rem;
}