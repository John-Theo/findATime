.tab-h{
    height: 3.5rem;
    width: 100%; 
    overflow: hidden;
    line-height: 100rpx;
    background: #F7F7F7; 
    font-size: 12px; 
    position: fixed;
    bottom: 0;
    padding: 0rpx 70rpx; 
    z-index: 99;
    background-color:#64c80a;
}
.tab-item{
  margin:0.5rem 36rpx;
  display: inline-flex;
  align-items:center;
  justify-content:center;
  width: 30%;
  color: white;
}
.card{
  background-color: #ffffff;
  border-radius: 7px;
  box-shadow: 0 0 10px 2px rgba(150, 150, 150, 0.1);
  margin: 0 1rem;
  overflow: hidden;
}
.back{
  height: 30rem;
  margin-top: -1rem;
  background-color: #64c80a;
  padding: 1.5rem 0;
}

.date{
  font-size: 15px;
  font-weight: 550;
  width: 1rem;
  text-align: right;
}
.title{
  font-size: 18px;
  font-weight: 800;
  color: #555;
  text-align: center;
  margin: 2.5rem 0 0 0;
}
.number2{
  font-size: 45px;
  color: #64c80a;
  margin-right: 0.2rem;
}
.scale{
  font-size: 10px;
  color: #aaa;
  margin-bottom: 0.2rem;
}
.scale2{
  font-size: 15px;
  color: #aaa;
}
.week2{
  font-size: 15px;
  color: #64c80a;
  width: 3rem;
  font-weight: 400;
  margin-bottom: 1.5rem;
}
.page-col{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 1rem;
}
.invite{
  background-color: #eee;
  height: 3rem;
  font-size: 13px;
  font-weight: 800;
  color: #64c80a;
  border-radius: 0;
  padding-top: 0.5rem;
  margin-top: 2rem; 
}
.pic{
  height:100px;
  width:100px;
  margin-bottom:0.5rem;
  margin-top:1rem;
}