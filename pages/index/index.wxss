/**index.wxss**/
.tab-h{
    height: 3.5rem;
    width: 100%; 
    overflow: hidden;
    line-height: 100rpx;
    background: #F7F7F7; 
    font-size: 12px; 
    position: fixed;
    bottom: 0;
    padding: 0rpx 70rpx; 
    z-index: 99;
    background-color:#64c80a;
}
.tab-item{
  margin:0.5rem 36rpx;
  display: inline-flex;
  align-items:center;
  justify-content:center;
  width: 30%;
  color: white;
}
.tab-item.active{color: white;position: relative;}
.tab-item.active:after{
  content: "";
  display: block;
  height: 8rpx;
  width: 80rpx;
  background: #ffffff;
  position: absolute; 
  bottom: 0;
  left: 70rpx;
  border-radius: 16rpx;
}
.item-ans{ 
  display: flex; 
  flex-grow: row no-wrap;
  justify-content: space-between; 
  padding: 30rpx;
  box-sizing: border-box; 
  height: 180rpx;
  align-items: center;
  border-bottom: 1px solid #F2F2F2;
  border-radius: 7px;
  margin-bottom: 0.5rem;
  width: 90%;
  z-index: -99;
  }
.expertInfo{font-size: 12px;flex-grow: 1;color: #B0B0B0;line-height: 1.5em;}
.btn{flex-grow: 1; color: #64c80a;display: flex;justify-content: space-around;}
.tab-content{
  background-color: #64c80a;
  margin-top: 0rpx;
}
.scoll-h{
  height: 90%;
  padding:0 5%;
  }
.picker{
  margin-top: 0.5rem;
  padding: 0.4rem 0.5rem;
  border-radius:7px;
  font-size: 13px;
  border: 1.5px #64c80a solid;
  width: 5rem;
  height: 1rem
}
.card{
  background-color: #ffffff;
  border-radius: 7px;
  box-shadow: 0 0 10px 2px rgba(150, 150, 150, 0.1);
  margin: 0.5rem 1rem;
  padding: 0.5rem 0.5rem 0 0.5rem;
  overflow: hidden;
}
.name{
  font-size: 17px;
  color: #ccc;
  font-weight: 600;
  text-align: center;
}
.input_name{
  height: 2rem;
  padding: 1.5rem 0 0.3rem 0;
  border-bottom: 1.5px #64c80a solid;
